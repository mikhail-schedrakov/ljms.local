{% extends 'UmbrellaAdminBundle::adminLayout.html.twig' %}

{# Customize view error fields #}
{% form_theme form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <p class="msg_err">{{ error.message }}</p>
            {% endfor %}
        {% endif %}
    {% endspaceless %} 
{% endblock form_errors %}

{% block content %}

    <div class="add_edit_page_title">
        <h2>Add System User</h2>
    </div>

    <form id="add_user_form" action="" method="post">
        <div class="form_container">
            <table border="0" align="center" width="80%" >
                <tr class="form_head">
                    <td  colspan=4>
                        <h3>User information</h3>
                    </td>
                </tr>
                
                <tr>
                    <td width="18%">
                        First Name *
                    </td>
                    <td width="34%">                        
                        {{ form_widget(form.firstName, {'required': false, 'attr': {'style': 'width: 150px;'}}) }}
                    </td>
                    <td width="18%">
                        Last Name *
                    </td>
                    <td width="28%">                    
                        {{ form_widget(form.lastName, {'required': false, 'attr': {'style': 'width: 150px;'}}) }}
                    </td>
                </tr>
                <tr valign="top">
                    <td width="18%">  
                    </td>
                    <td width="34%" >
                        {{ form_errors(form.firstName) }}
                    </td>
                    <td width="18%">
                    </td>
                    <td width="28%">
                        {{ form_errors(form.lastName) }}
                    </td>
                </tr>

                {# <tr>
                    <td>
                        Address *
                    </td>
                    <td>
